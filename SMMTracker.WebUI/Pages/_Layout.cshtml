<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SMM Tracker</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        /* Базовые стили для всех страниц */
        .main-container {
            min-height: 100vh;
        }

        /* Стили для главной страницы и логина */
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .glass-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }
        
        /* Стили для тостов */
        .toast-container {
            z-index: 9999;
        }
    
        /* Стили для страницы команды */
        .team-container {
            min-height: 100vh;
            background: #f8f9fa;
        }

        /* Стили для Dashboard будут добавлены в самой странице */
    </style>
    
    @* Подключение стилей из wwwroot если нужно *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
@{
    // Определяем, на какой странице находимся
    var isDashboard = ViewContext.RouteData.Values["page"]?.ToString()?.Contains("/Dashboard") ?? false;
    var isTeam = ViewContext.RouteData.Values["page"]?.ToString()?.Contains("/Team") ?? false;
    var isEvent = ViewContext.RouteData.Values["page"]?.ToString()?.Contains("/Event") ?? false;
    
    // Определяем класс контейнера
    string containerClass = "";
    
    if (isDashboard || isTeam || isEvent)
    {
        containerClass = "";
    }
    else
    {
        containerClass = "gradient-bg";
    }
}

<div class="main-container @containerClass">
    @RenderBody()
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>