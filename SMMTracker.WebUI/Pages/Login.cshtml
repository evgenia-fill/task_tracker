@page
@model SMMTracker.WebUI.ViewModels.LoginModel
@{
    ViewData["Title"] = "Вход";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="glass-card">
                <div class="text-center mb-4">
                    <h2 class="mb-3">
                        <i class="bi bi-telegram text-primary"></i>
                        <br />
                        Telegram Авторизация
                    </h2>
                    <p class="text-muted">Войдите с помощью вашего Telegram аккаунта</p>
                </div>
                
                <form method="post">
                    <div class="mb-4">
                        <label class="form-label">Telegram Username</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text">@@</span>
                            <input type="text" 
                                   class="form-control" 
                                   asp-for="Username" 
                                   placeholder="username"
                                   required>
                        </div>
                        <div class="form-text">Введите ваш логин в Telegram (без @@)</div>
                    </div>
                    
                    <div class="d-grid gap-3 mb-4">
                        <button type="submit" 
                                class="btn btn-primary btn-lg"
                                asp-page-handler="Telegram">
                            <i class="bi bi-telegram me-2"></i>Авторизоваться через Telegram
                        </button>
                        
                        <!-- Тестовая кнопка для разработки -->
                        <a href="/Dashboard" class="btn btn-success btn-lg">
                            <i class="bi bi-rocket-takeoff me-2"></i>Тестовый вход
                        </a>
                    </div>
                    
                    <div class="text-center">
                        <a href="/" class="btn btn-link">
                            <i class="bi bi-arrow-left me-1"></i>Назад на главную
                        </a>
                    </div>
                </form>
                
                <!-- Сообщение об ошибке -->
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-warning mt-3" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        @Model.ErrorMessage
                    </div>
                }
            </div>
        </div>
    </div>
</div>